{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build debug", //任务名称
      "type": "shell", //shell命令
      "windows": {
        "command": "mkdir build || cd build && cmake -DCMAKE_BUILD_TYPE=Debug .. -G \"MinGW Makefiles\" && mingw32-make"
      },
      "args": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "build release",
      "type": "shell",
      "windows": {
        "command": "mkdir build || cd build && cmake -DCMAKE_BUILD_TYPE=Release .. -G \"MinGW Makefiles\" && mingw32-make"
      },
      "args": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": "$msCompile"
    }
  ]
}
